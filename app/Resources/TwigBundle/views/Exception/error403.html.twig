{# src/AppBundle/Resources/TwigBundle/views/Exception/error403.html.twig #}

{% extends "layout.html.twig" %}

    {% block title %}
        {{ 'title.site.error' | trans }} : {{ status_text }} - {{ parent() }}
    {% endblock %}



    {% block body %}

        <header class="masthead text-center text-white d-flex">
            <div class="container my-auto">
                <div class="row">
                    <div class="col-lg-10 mx-auto">
                        <h1 class="text-uppercase">
                            <strong>{{ 'title.welcome' | trans }}</strong>
                        </h1>
                    </div>
                </div>
            </div>
        </header>

        <section>
            <div class="container">
                <div class="row">

                    <div class="col-lg-1">
                    </div>


                    <div class="col-lg-11">
                        <div class="container">


                            <h1>{{ 'Oops' | trans }} ! {{ 'title.site.error' | trans }}</h1>
                            <br/>

                            <p>{{ 'error.server' | trans }} "{{ status_code }}" : {{ 'access.denied' | trans }}</p>
                            <p>{{ 'sorry' | trans }} <a href="{{ path('homepage') }}">{{ 'go.to.homepage' | trans }}</a></p>

                        </div>
                    </div>
                </div>
            </div>
        </section>

    {% endblock %}