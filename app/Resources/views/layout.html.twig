<!doctype html>
<html lang="fr">

    <head>

        <meta charset="UTF-8">

        <!-- balise pour adapter le contenu aux différents supports
         width=device-width : largeur de la fenêtre
         initial-scale=1.0 : niveau de zoom initial
         user-scalable=yes zoom autorisé
         shrink-to-fit=no pour iOS9-->
        <meta name="viewport" content="width=device-width, user-scalable=yes, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, shrink-to-fit=no">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">

        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />

        <title>{% block title %}{{ 'title.site' | trans }}{% endblock %}</title>

        {% block stylesheets %}
            <!-- Bootstrap core CSS -->
            <link href="{{ asset('assets/template/vendor/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet">

            <!-- Custom fonts for this template -->
            <link href="{{ asset('assets/template/vendor/font-awesome/css/font-awesome.min.css') }}" rel="stylesheet" type="text/css">
            <link href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>
            <link href='https://fonts.googleapis.com/css?family=Merriweather:400,300,300italic,400italic,700,700italic,900,900italic' rel='stylesheet' type='text/css'>


            <!-- Plugin CSS -->
            <link href="{{ asset('assets/template/vendor/magnific-popup/magnific-popup.css') }}" rel="stylesheet">

            <!-- Custom styles for this template -->
            <link href="{{ asset('assets/template/css/creative.css') }}" rel="stylesheet">
        {% endblock %}

    </head>

    <body>


    <div class="container-fluid bg-light">
        <div class="container">
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="navbar-brand"><a href="{{ path('homepage') }}">{{ 'nav.title' | trans }}</a></div>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('homepage') }}">{{ 'nav.home' | trans }}</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('contact') }}">{{ 'nav.contact' | trans }}</a>
                    </li>
                    {% if app.request.get('_route') is not empty %}
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            {{ 'nav.languages' | trans }}
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                            <a class="dropdown-item" href="{{ path(app.request.get('_route'),{ _locale: 'fr'}) }}">{{ 'nav.languages.fr' | trans }}</a>
                            <a class="dropdown-item" href="{{ path(app.request.get('_route'),{ _locale: 'en'}) }}">{{ 'nav.languages.en' | trans }}</a>
                        </div>
                    </li>
                    {% endif %}
                </ul>
            </div>
        </nav>
        </div>
    </div>


        {% for message in app.flashes('notice') %}
            <div class="alert alert-success">
                {{ message | trans}}
            </div>
        {% endfor %}


        {% for message in app.flashes('danger') %}
            <div class="alert alert-danger">
                {{ message | trans}}
            </div>
        {% endfor %}

        {% block body %}



        {% endblock %}


    <footer>

        <div class="container">
            <div class="row">

                <div class="col-lg-1">
                </div>


                <div class="col-lg-11">
                    <div class="container">
                        <hr/>
                        <div class="footer-text">
                            <p>{{ 'footer.payment' | trans }} | <a href="https://www.louvre.fr/" target="_blank">{{ 'footer.louvre.website' | trans }}</a> | <a href="{{ path('contact') }}">{{ 'nav.contact' | trans }}</a> |<br/>
                                © 2018 - Vanessa Asse - <a href="https://openclassrooms.com/paths/chef-de-projet-multimedia-developpement" target="blank">
                                    Projet 4 dans la cadre de la formation "Chef de projet multimédia - spécialité Développement" avec Openclassrooms</a></p>
                        </div>
                    </div>
                </div>

            </div>
        </div>

    </footer>


    <!-- Bootstrap core JavaScript -->
    <script src="{{ asset('assets/template/vendor/jquery/jquery.min.js') }}"></script>
    <script src="{{ asset('assets/template/vendor/bootstrap/js/bootstrap.bundle.min.js') }}"></script>

    <!-- Plugin JavaScript -->
    <script src="{{ asset('assets/template/vendor/jquery-easing/jquery.easing.min.js') }}"></script>
    <script src="{{ asset('assets/template/vendor/scrollreveal/scrollreveal.min.js') }}"></script>
    <script src="{{ asset('assets/template/vendor/magnific-popup/jquery.magnific-popup.min.js') }}"></script>

    <!-- Custom scripts for this template -->
    <script src="{{ asset('assets/template/js/creative.min.js') }}"></script>


    {% block javascripts %}

    {% endblock %}


</body>
</html>