{# src/AppBundle/Resources/views/layout.html.twig#}


<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <title>{% block title %}Billetterie du Musée du Louvre{% endblock %}</title>

    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('assets/bootstrap/css/bootstrap.min.css')}}" >
    {% endblock %}


</head>
<body>

<div class="container">

    <div class="jumbotron">
    <div id="header">

        <h1>Bienvenue sur la billeterie du musée du Louvre</h1>

    </div>
    </div>

    <div class="row">

        <div id="content" class="col-lg-3">
            <div id="menu">
                <ul>
                    <li><a href="#">Contact</a></li>
                    <li><a href="#">Languages</a></li>
                    <ul>
                        <li><a href="#">Français</a></li>
                        <li><a href="#">English</a></li>
                    </ul>
                </ul>
            </div>
        </div>



        <div id="content" class="col-lg-9">
        {% block body %}

        {% endblock %}
        </div>

    </div>

    <hr>

    <footer>
        <p>Paiement 100% sécurisé | <a href="https://www.louvre.fr/" target="_blank">Site officiel du musée du Louvre</a> | Contact |</p>
    </footer>

    {% block javas %}
        <script src="{{ asset('assets/jquery-3.3.1.min.js') }}"></script>
        <script src="{{ asset('assets/bootstrap/js/bootstrap.bundle.min.js') }}"></script>
        <script src="{{ asset('assets/bootstrap-datepicker-master/js/bootstrap-datepicker.js') }}"></script>
    {% endblock %}

</div>


</body>
</html>