{# src/AppBundle/Resources/views/Visit/customer.html.twig#}

{% extends "layout.html.twig" %}

    {% block title %}
        Coordonnées de l'acheteur - {{ parent() }}
    {% endblock %}


    {% block body %}

    <div class="row">
        <div id="content" class="col-lg-9">
            <button>Choix des billets</button>
            <button>Identification</button>
            <button>Coordonnées</button>
            <button>Paiement</button>
            <button>Confirmation</button>
        </div>
    </div>
    <br/>

        {{ form_start(form) }}

        {{ form_row(form.lastname) }}
        {{ form_errors(form.lastname) }}<br/>

        {{ form_row(form.firstname) }}
        {{ form_errors(form.firstname) }}<br/>

        {{ form_row(form.email) }}
        {{ form_errors(form.email) }}<br/>

        {{ form_row(form.adress) }}
        {{ form_errors(form.adress) }}<br/>

        {{ form_row(form.postCode) }}
        {{ form_errors(form.postCode) }}<br/>

        {{ form_row(form.city) }}
        {{ form_errors(form.city) }}<br/>

        {{ form_row(form.country) }}
        {{ form_errors(form.country) }}<br/>

        {{ form_widget(form.save) }}

        {{ form_end(form) }}

    {% endblock %}
