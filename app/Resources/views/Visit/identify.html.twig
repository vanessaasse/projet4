{# src/AppBundle/Resources/views/Visit/identify.html.twig#}

{% extends "layout.html.twig" %}

    {% block title %}
        Identification des visiteurs - {{ parent() }}
    {% endblock %}


    {% block body %}

        <div class="container">
            <div class="row">

                <div class="col-lg-1">
                </div>

                <div class="col-lg-11 section-progress">
                    <div class="container">

                        <div class="progress">
                            <div class="progress-bar bg-success" role="progressbar" style="width: 40%;
                            " aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">Identification des visiteurs</div>
                        </div>

                    </div>
                </div>

            </div>
        </div>

        <section>

            <div class="container">
            <div class="row">

                <div class="col-lg-1">
                </div>


                <div class="col-lg-11">
                    <div class="container">
                        <div class="form-group">

                {{ form_start(form) }}

                {{ form_row(form.lastname) }}
                {{ form_errors(form.lastname) }}<br/>

                {{ form_row(form.firstname) }}
                {{ form_errors(form.firstname) }}<br/>

                {{ form_row(form.country) }}
                {{ form_errors(form.country) }}<br/>

                {{ form_row(form.birthday) }}
                {{ form_errors(form.birthday) }}<br/>

                {{ form_row(form.discount) }}
                {{ form_errors(form.discount) }}<br/>

                    <div class="row">
                        <div class="col-sm-1">
                        </div>

                        <div class="col-sm-11">
                            {{ form_widget(form.save, {attr: {class: "btn btn-success"}}) }}
                        </div>
                    </div>

                {{ form_end(form) }}

                        </div>
                    </div>
                </div>

            </div>
            </div>
        </section>

    {% endblock %}