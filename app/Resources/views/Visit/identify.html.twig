{# src/AppBundle/Resources/views/Visit/identify.html.twig#}

{% extends "layout.html.twig" %}

    {% block title %}
        Identification des visiteurs - {{ parent() }}
    {% endblock %}


    {% block body %}

        <div class="container">
            <div class="row">

                <div class="col-lg-1">
                </div>

                <div class="col-lg-11 section-progress">
                    <div class="container">

                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item active">Choix des billets</li>
                                <li class="breadcrumb-item text-success font-weight-bold" style="text-decoration:underline;">IDENTIFICATION</li>
                                <li class="breadcrumb-item active">Coordonn√©es</li>
                                <li class="breadcrumb-item active">Paiement</li>
                                <li class="breadcrumb-item active">Confirmation</li>
                            </ol>
                        </nav>
                    </div>
                </div>

            </div>
        </div>

        <section>

            <div class="container">
            <div class="row">

                <div class="col-lg-1">
                </div>


                <div class="col-lg-11">
                    <div class="container">
                        <div class="form-group">

                {{ form_start(form) }}

                {{ form_row(form.lastname) }}<br/>

                {{ form_row(form.firstname) }}<br/>

                {{ form_row(form.country) }}<br/>

                {{ form_row(form.birthday) }}<br/>

                {{ form_row(form.discount) }}<br/>

                    <div class="row">
                        <div class="col-sm-1">
                        </div>

                        <div class="col-sm-11">
                            {{ form_widget(form.save, {attr: {class: "btn btn-success"}}) }}
                        </div>
                    </div>

                {{ form_end(form) }}

                        </div>
                    </div>
                </div>

            </div>
            </div>
        </section>

    {% endblock %}