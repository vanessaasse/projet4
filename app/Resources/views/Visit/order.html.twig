{% extends "layout.html.twig" %}

    {% block title %}
        Choix des billets - {{ parent() }}
    {% endblock %}


    {% block body %}

        <div class="row">
            <div id="content" class="col-lg-9">
                <button>Choix des billets</button>
                <button>Identification</button>
                <button>Coordonn√©es</button>
                <button>Paiement</button>
                <button>Confirmation</button>
            </div>
        </div>
        <br/>

       {# {{ form(form) }} #}

        {{ form_start(form) }}

        <div id="content" class="col-lg-9">
        {{ form_row(form.visitDate) }}
        {{ form_errors(form.visitDate) }}<br/>

        {{ form_row(form.type) }}
        {{ form_errors(form.type) }}<br/>

        {{ form_row(form.nbTicket) }}
        {{ form_errors(form.nbTicket) }}<br/>


        {{ form_widget(form.save) }}
        </div>

        <script>
            $(document).ready(function() {
                $('.datepicker').datepicker({
                    format: 'dd-MM-yyyy',
                    autoclose: true,
                    daysOfWeekDisabled: '2'
                });
            });

        </script>

        {{ form_end(form) }}

    {% endblock %}


