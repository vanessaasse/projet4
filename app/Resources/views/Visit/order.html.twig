{# src/AppBundle/Resources/views/Visit/order.html.twig#}

{% extends "layout.html.twig" %}

    {% block title %}
        Choix des billets - {{ parent() }}
    {% endblock %}


    {% block body %}

        <div class="container">
            <div class="row">

                <div class="col-lg-1">
                </div>

                <div class="col-lg-11 section-progress">
                    <div class="container">

                    <div class="progress">
                        <div class="progress-bar bg-success" role="progressbar" style="width: 20%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">Choix des billets</div>
                    </div>

                    </div>
                </div>

            </div>
        </div>

       {# {{ form(form) }} #}


        <section>
            <div class="container">
                <div class="row">

                    <div class="col-lg-1">
                    </div>


                    <div class="col-lg-11">
                        <div class="container">
                            <div class="form-group">

                    {{ form_start(form) }}

                    {{ form_row(form.visitDate) }}
                    {{ form_errors(form.visitDate) }}<br/>

                    {{ form_row(form.type, {label_attr: {class: 'radio-custom'} }) }}
                    {{ form_errors(form.type) }}<br/>

                    {{ form_row(form.nbTicket) }}
                    {{ form_errors(form.nbTicket) }}<br/>


                    <div class="row">
                        <div class="col-sm-1">
                        </div>

                        <div class="col-sm-11">
                            {{ form_widget(form.save, {attr: {class: "btn btn-success"}}) }}
                        </div>
                    </div>



                        <script>
                            $(document).ready(function() {
                                $('.datepicker').datepicker({
                                    format: 'dd-MM-yyyy',
                                    autoclose: true,
                                    daysOfWeekDisabled: '2'
                                });
                            });

                        </script>

                    {{ form_end(form) }}

                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </section>


    {% endblock %}


