{# src/AppBundle/Resources/views/Visit/index.html.twig#}

{% extends "layout.html.twig" %}

    {% block title %}
        {{ 'title.site.index' | trans }} - {{ parent() }}
    {% endblock %}


    {% block body %}

        <header class="masthead text-center text-white d-flex">
            <div class="container my-auto">
                <div class="row">
                    <div class="col-lg-10 mx-auto">
                        <h1 class="text-uppercase">
                            <strong>{{ 'title.welcome' | trans }}</strong>
                        </h1>
                    </div>
                </div>
            </div>
        </header>


        <section>
            <div class="container">
                <div class="row">

                    <div class="col-lg-1">
                    </div>


                    <div class="col-lg-11">
                        <div class="container">


                            <p>{{ 'homepage.paragraph0' | trans }}</p>

                            <p>{{ 'homepage.paragraph1' | trans }}
                            <ul>
                                <li>{{ 'homepage.full.day.ticket' | trans }}</li>
                                <li>{{ 'homepage.half.day.ticket' | trans }}</li>
                            </ul>
                            </p>

                            <br/>

                            <p><strong>{{ 'homepage.prices' | trans }} :</strong></p>

                            <table>
                                <tr>
                                    <th>{{ 'homepage.array.tickets' | trans }}</th>
                                    <th>{{ 'label.full.day.ticket' | trans }}</th>
                                    <th>{{ 'label.half.day.ticket' | trans }}*</th>
                                </tr>

                                <tr>
                                    <td>{{ 'homepage.first.price' | trans }}</td>
                                    <td>{{ constant('AppBundle\\Entity\\Ticket::FULL_DAY_PRICE') }} euros</td>
                                    <td>{{ constant('AppBundle\\Entity\\Ticket::HALF_DAY_PRICE') }} euros</td>
                                </tr>

                                <tr>
                                    <td>{{ 'homepage.second.price' | trans }}</td>
                                    <td>{{ constant('AppBundle\\Entity\\Ticket::FULL_DAY_SENIOR') }} euros</td>
                                    <td>{{ constant('AppBundle\\Entity\\Ticket::HALF_DAY_SENIOR') }} euros</td>
                                </tr>

                                <tr>
                                    <td>{{ 'homepage.third.price' | trans }}**</td>
                                    <td>{{ constant('AppBundle\\Entity\\Ticket::FULL_DAY_DISCOUNT') }} euros</td>
                                    <td>{{ constant('AppBundle\\Entity\\Ticket::HALF_DAY_DISCOUNT') }} euros</td>
                                </tr>

                                <tr>
                                    <td>{{ 'homepage.fourth.price' | trans }}*** </td>
                                    <td>{{ constant('AppBundle\\Entity\\Ticket::FULL_DAY_CHILD') }} euros</td>
                                    <td>{{ constant('AppBundle\\Entity\\Ticket::HALF_DAY_CHILD') }} euros</td>
                                </tr>
                            </table>
                            <div class="star">(*){{ 'discount.first.condition' | trans }} - (**){{ 'discount.second.condition' | trans }} - (***){{ 'discount.third.condition' | trans }}</div>
                            <br/>

                            <p>{{ 'homepage.recommandations' | trans }} </p>

                            <br/>
                            <div class="boutonbuy">
                            <button type="button" class="btn btn-light btn-lg"><a href="{{ path('app_visit_order') }}">{{ 'button.buy.tickets' | trans }}</a></button>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

        </section>


    {% endblock %}